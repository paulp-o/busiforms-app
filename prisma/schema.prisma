datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
}

model Survey {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  theme       String     // color code
  questions   Question[]
  createdAt   DateTime   @default(now())
  responses   Response[]
}

model Question {
  id        Int      @id @default(autoincrement())
  text      String   // 질문 내용
  type      String   // "text", "multiple-choice", "checkbox"
  options   String?   // 다중 선택 옵션을 JSON 문자열로 저장
  survey    Survey   @relation(fields: [surveyId], references: [id])
  surveyId  Int
}

model Response {
  id        Int      @id @default(autoincrement())
  survey    Survey   @relation(fields: [surveyId], references: [id])
  surveyId  Int
  answers   String   // 응답 데이터를 JSON 문자열로 저장
  createdAt DateTime @default(now())
}